@model TCCGWT.Models.formsModels.LoginFuncModel
@{
    ViewBag.Title = "LoginFunc";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<main class="form-signin mt-5 text-center container align-items-center">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form">
            <img src="~/Images/logo_preta.png" width="150px" height="150px" />
            <hr />
            <h1 class="h3 mb-3 fw-normal">Entrar</h1>
            <a href="@Url.Action("Login", "Login", "Login")"> Cliente</a>

            <div class="col-form-label ">
                @Html.EditorFor(model => model.UserFunc, new { htmlAttributes = new { @class = "form-control", @placeholder = "Usuário" } })
                @Html.ValidationMessageFor(model => model.UserFunc)
            </div>
            <div class="col-form-label">
                @Html.EditorFor(model => model.SenhaFunc, new { htmlAttributes = new { @class = "form-control", type = "password", @placeholder="Senha" } })
                @Html.ValidationMessageFor(model => model.SenhaFunc)
            </div>

            <button class="w-50 btn btn-lg btn-custom" type="submit" value="logar">Login</button>
        </div>
     }
    </main>
    <br /><br /><br /><br />


@model TCCGWT.Models.formsModels.loginModel
@{
    ViewBag.Title = "Login";
}
<body class="text-center">

    <main class="form-signin mt-5">
        
       @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <h1 class="h3 mb-3 fw-normal">Please sign in</h1>

            <div class="form-floating">
                @Html.EditorFor(model => model.userCli, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.userCli)
            </div>
            <div class="form-floating">
                @Html.EditorFor(model => model.senhaCli, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.senhaCli)
            </div>

            <button class="w-100 btn btn-lg btn-primary" type="submit" value="logar">Sign in</button>
            <p class="mt-5 mb-3 text-muted">&copy; 2017–2021</p>
        }
    </main>



</body>






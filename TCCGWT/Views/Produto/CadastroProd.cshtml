@model TCCGWT.Models.ProdutoCadastro

@{
    ViewBag.Title = "CadastroProd";
    Layout = "~/Views/Shared/_LayoutLogadoFunc.cshtml";
}
<main class="form-signin mt-5 text-center container align-items-center">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form">
        <h1>Cadastrar Produto</h1>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="col-form-label">
            <div class="col-md-10">
                @Html.EditorFor(model => model.NomeProd, new { htmlAttributes = new { @class = "form-control", @placeholder = "Nome" } })
                @Html.ValidationMessageFor(model => model.NomeProd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-form-label">
            <div class="col-md-10">
                @Html.EditorFor(model => model.DescProd, new { htmlAttributes = new { @class = "form-control", @placeholder = "Descrição" } })
                @Html.ValidationMessageFor(model => model.DescProd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-form-label">
            <div class="col-md-10">
                @Html.EditorFor(model => model.PrecoProd, new { htmlAttributes = new { @class = "form-control", @placeholder = "Preço" } })
                @Html.ValidationMessageFor(model => model.PrecoProd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-form-label">
            <div class="col-md-10">
                @Html.EditorFor(model => model.CategoriaProd, new { htmlAttributes = new { @class = "form-control", @placeholder = "Categoria" } })
                @Html.ValidationMessageFor(model => model.CategoriaProd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-form-label">
            <div class="col-md-10">
                @Html.EditorFor(model => model.StatusProd, new { htmlAttributes = new { @class = "form-control", @placeholder = "Status" } })
                @Html.ValidationMessageFor(model => model.StatusProd, "", new { @class = "text-danger" })
            </div>
        </div>
        <button class="w-50 btn btn-lg btn-custom" type="submit" value="Create" style="margin-top: 15px">Cadastrar</button>
    </div>
    }
</main>
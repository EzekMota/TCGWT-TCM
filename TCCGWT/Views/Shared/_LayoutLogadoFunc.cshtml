<!DOCTYPE html>
<html>

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tomoe Sushi</title>
    <asp:ContentPlaceHolder ID="Stylesheets" runat="server">
        <link rel="stylesheet" href="~/Content/Estilo.css" type="text/css" />
    </asp:ContentPlaceHolder>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="letrinhas" style="background-color:#f7f7f7d;">
    <nav class="navbar navbar-dark nav-custom fixed-top" style="color:floralwhite;">
        <div class="container-fluid">
            <div class="">
                <button class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a href='@Url.Action("IndexLogadoFunc","Home","Home")' style="padding-left: 30px;"><img src="~/Images/brand_branca.png" width="180px" height="70px" class="navbar-brand" /></a>
            </div>
            <div id="nav-left nav-esquerda">
                <a class="navbar-text underline-hover"> @Request.Cookies["FuncName"].Value </a>
            </div>
            <div class="offcanvas offcanvas-start" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel" style="background-color:#121211; color:floralwhite;">
                <div class="offcanvas-header">
                    <h5 class="offcanvas-title" id="offcanvasNavbarLabel">Menu</h5>
                    <button type="button" class="btn-close btn-light text-reset text-white" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="">
                    <ul class="navbar-nav justify-content-end flex-grow-1 pe-3" width="100%">
                        <li class="nav-item menu-container">
                            <a class="navbar-text underline-hover" href='@Url.Action("Index","Home", "Home")' style="text-decoration:none; color: floralwhite;">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-door-open" viewBox="0 0 16 16">
                                    <path d="M8.5 10c-.276 0-.5-.448-.5-1s.224-1 .5-1 .5.448.5 1-.224 1-.5 1z" />
                                    <path d="M10.828.122A.5.5 0 0 1 11 .5V1h.5A1.5 1.5 0 0 1 13 2.5V15h1.5a.5.5 0 0 1 0 1h-13a.5.5 0 0 1 0-1H3V1.5a.5.5 0 0 1 .43-.495l7-1a.5.5 0 0 1 .398.117zM11.5 2H11v13h1V2.5a.5.5 0 0 0-.5-.5zM4 1.934V15h6V1.077l-6 .857z" />
                                </svg>
                                Sair
                            </a>
                        </li>
                        <li class="nav-item menu-hover" style="margin-top:25px">
                            <a class="nav-link menu-container" href='@Url.Action("Clientes","Cliente","Cliente")'>Clientes</a>
                        </li>
                        <li class="nav-item menu-hover">
                            <a class="nav-link menu-container" href="@Url.Action("CadastroProd","Produto","Produto")">Produtos</a>
                        </li>
                    </ul>                    
                </div>
            </div>
        </div>
    </nav>
    <div class="body-content compartimento">
        @RenderBody()
        <div class="container">
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year - Todos os direitos reservados.</p>
            </footer>
        </div>
    </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @Scripts.Render("~/bundles/inputmask")
        @RenderSection("scripts", required: false)
</body>
</html>